<section class="view-admin-waiting-sellers">
  <div class="column-set">
    <aside>
      <h1>Seller waitlist</h1>

      <%= render partial: 'admin/shared/filters', locals: { search: search, controller_name: :waiting_sellers } %>
    </aside>

    <div class="current-view">
      <%= render partial: 'mini_dashboard' %>
      <%= render partial: 'upload_form' %>

      <section class="record-list">
        <h2><%= pluralize(search.result_count, 'sellers') %></h2>
        <%= render partial: 'list', locals: {
              results: search.paginated_results,
            } %>
        <%= paginate search.paginated_results %>
      </section>
    </div>
  </div>
</section>
