<% content_for(:admin_content) do %>
  <section class="view-admin-buyers-show">
    <div class="column-set">
      <aside>
        <h1>
          <span class="type">Buyers</span>
          <%= buyer.name %>
        </h1>
        <nav class="vertical">
          <ul>
            <%= nav_link_to 'Overview', admin_buyer_path(buyer), icon: 'ellipses' %>
            <%= nav_link_to 'Details', details_admin_buyer_path(buyer), icon: 'spreadsheet' %>
          </ul>
        </nav>
      </aside>

      <div class="current-view">
        <%= content_for?(:buyer_content) ? yield(:buyer_content) : yield %>
      </div>
    </div>
  </section>
<% end %>

<%= render template: 'layouts/admin' %>
