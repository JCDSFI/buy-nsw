<% content_for(:without_container, true) %>

<% content_for(:content) do %>
  <header class="application-header">
    <div class="container">
      <h1>
        <span class="type-label">Seller dashboard<span class="visually-hidden">:</span></span>
        <%= seller.name %>
      </h1>
    </div>
  </header>

  <div class="container">
    <section class="view-sellers-dashboard">
      <% if seller.inactive? %>
        <div class="current-application">
          <span class="under-review-icon" aria-hidden="true"></span>
          <h2>Your seller application is under review</h2>
          <p>We are currently reviewing your seller application. You'll receive an email when we've made a decision.</p>
          <p>In the meantime, you can <%= link_to 'contact us', '' %> if you have any questions.</p>
        </div>
      <% end %>

      <section class="account-actions">
        <h2><%= t 'sellers.dashboard.actions.label' %></h2>
        <ul>
          <li><%= link_to t('sellers.dashboard.actions.change_password'), edit_user_registration_path %></li>
          <li><%= link_to t('sellers.dashboard.actions.update_email'), edit_user_registration_path %></li>
          <li><%= link_to t('sellers.dashboard.actions.contact_support'), '#' %></li>
        </ul>
      </section>
    </section>
  </div>
<% end %>

<%= render template: 'layouts/application' %>
