<section class="application-dashboard">
  <aside>
    <h1><%= t('sellers.applications.title') %></h1>
    <%= t('sellers.applications.aside_html') %>
  </aside>

  <ul class="cards">
    <% if can_submit_application? %>
      <%= render partial: 'submit', locals: { application: application } %>
    <% end %>
    <%= display_step(application, steps, :tailor, skip_button: true) %>
    <%= display_step(application, steps, :contacts) %>
    <%= display_step(application, steps, :profile) %>
    <%= display_step(application, steps, :documents) %>
    <%= display_step(application, steps, :legals) %>
  </ul>
</section>
