<section class="detail-review">
<% if operation['result.ready_for_submission'].present? %>
  <%= t('sellers.applications.tailor.steps.review.intro_html') %>
  
  <dl>
    <dt><%= t('activemodel.attributes.sellers.seller_application.tailor.contract.business_details.name') %></dt>
    <dd><%= operation[:seller_model].name %></dd>

    <dt><%= t('activemodel.attributes.sellers.seller_application.tailor.contract.business_details.abn') %></dt>
    <dd><%= operation[:seller_model].abn %></dd>

    <dt>Your industries</dt>
    <dd><%= operation[:seller_model].industry.texts.join("<br>").html_safe %></dd>

    <dt>ICT categories</dt>
    <dd><%= operation[:seller_model].services.texts.join("<br>").html_safe %></dd>
  </dl>
</section>

<% else %>
  <p><%= t('sellers.applications.tailor.steps.review.incomplete_message') %></p>
<% end %>
