<%= f.text_field :name %>

<div data-module="max-word-count" data-max-word-count="200">
  <%= f.text_area :summary, rows: 8 %>
</div>

<fieldset class="multiple-choice-group checkbox-group with-enterprise-field">
  <legend>Which buyers would use your product?</legend>
  <%= f.collection_check_boxes(:audiences, Product.audiences.options, :last, :first, skip_label: true) %>

  <div class="form-check">
    <%= check_box_tag 'enterprise', nil, false, id: "enterprise_check" %>
    <%= label_tag "enterprise_check", "Enterprise", class: 'form-check-label' %>
    <small class="form-text text-muted">More than 3 of the selections in the above list</small>
  </div>
</fieldset>

<%= render partial: 'expanding_list', locals: {
  form: f,
  association: :features,
  field: :feature,
  i18n_base: 'activemodel.attributes.sellers.seller_application.products.contract.basics.features',
} %>

<%= render partial: 'expanding_list', locals: {
  form: f,
  association: :benefits,
  field: :benefit,
  i18n_base: 'activemodel.attributes.sellers.seller_application.products.contract.basics.benefits',
} %>

<fieldset class="multiple-choice-group checkbox-group"
          data-module="further-details-fields"
          data-further-details-values="no-extras,extra-support,extra-features-support">

  <legend>Is this product or service your own, or are you reselling?</legend>
  <%= f.collection_radio_buttons(:reseller_type, Product.reseller_type.options, :last, :first, skip_label: true, data: { further_details: 'input' }) %>

  <div class="additional-fields" data-further-details="fields">
    <%= f.text_field :organisation_resold %>
  </div>
</fieldset>

<fieldset class="multiple-choice-group radio-group"
          data-module="further-details-fields"
          data-further-details-values="true">

  <legend>If buyers have questions, who should they contact?</legend>

  <%= f.form_group :custom_contact do %>
    <%= f.radio_button :custom_contact, 'false', data: { further_details: 'input' } %>
    <%= f.radio_button :custom_contact, 'true', data: { further_details: 'input' } %>
  <% end %>

  <div class="additional-fields" data-further-details="fields">
    <%= f.text_field :contact_name %>
    <%= f.text_field :contact_email %>
    <%= f.text_field :contact_phone %>
  </div>
</fieldset>
