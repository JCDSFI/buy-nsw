<%= f.input :name %>

<div data-module="max-word-count" data-max-word-count="200">
  <%= f.input :summary, as: :text, input_html: { rows: 8 } %>
</div>

<fieldset class="multiple-choice-group checkbox-group with-enterprise-field"
          data-module="further-details-fields"
          data-further-details-values="other">
  <%= f.input :audiences, as: :check_boxes, collection: Product.audiences.options %>
</fieldset>

<%= render partial: 'sellers/applications/products/forms/shared/expanding_list', locals: {
  form: f,
  association: :features,
  field: :feature,
  i18n_base: 'sellers.applications.products.steps.basics.features',
} %>

<%= render partial: 'sellers/applications/products/forms/shared/expanding_list', locals: {
  form: f,
  association: :benefits,
  field: :benefit,
  i18n_base: 'sellers.applications.products.steps.basics.benefits',
} %>

<fieldset class="multiple-choice-group checkbox-group"
          data-module="further-details-fields"
          data-further-details-values="no-extras,extra-support,extra-features-support">
  <%= f.input :reseller_type, as: :radio_buttons, collection: Product.reseller_type.options, skip_label: true, input_html: { data: { further_details: 'input' } } %>

  <div class="additional-fields" data-further-details="fields">
    <%= f.input :organisation_resold %>
  </div>
</fieldset>

<fieldset class="multiple-choice-group radio-group"
          data-module="further-details-fields"
          data-further-details-values="true">

  <%= f.input :custom_contact, as: :radio_buttons, input_html: { data: { further_details: 'input' } } %>

  <div class="additional-fields" data-further-details="fields">
    <%= f.input :contact_name %>
    <%= f.input :contact_email %>
    <%= f.input :contact_phone %>
  </div>
</fieldset>
