<%= f.input :data_location_control, as: :radio_buttons, input_html: { data: { further_details: 'input' } } %>

<fieldset class="multiple-choice-group radio-group"
          data-module="further-details-fields"
          data-further-details-multiple-options="true">

  <%= f.input :data_location, as: :radio_buttons, collection: Product.data_location.options, wrapper: false, input_html: { data: { further_details: 'input' } } %>

  <div class="additional-fields" data-further-details="fields" data-further-details-value="other-known">
    <%= f.input :data_location_other, as: :text, input_html: { rows: 5 } %>
  </div>
  <div class="additional-fields" data-further-details="fields" data-further-details-value="dont-know">
    <%= f.input :data_location_unknown_reason, as: :text, input_html: { rows: 5 } %>
  </div>
</fieldset>

<fieldset class="multiple-choice-group radio-group"
          data-module="further-details-fields"
