  <%= f.input :own_data_centre, as: :radio_buttons, wrapper: false, input_html: { data: { further_details: 'input' } } %>

  <div class="additional-fields" data-further-details="fields">
    <%= f.input :own_data_centre_details, as: :text, input_html: { rows: 5 } %>
  </div>
</fieldset>

