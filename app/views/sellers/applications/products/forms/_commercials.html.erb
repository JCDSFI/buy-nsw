<fieldset class="multiple-choice-group radio-group"
          data-module="further-details-fields"
          data-further-details-values="true">

  <legend><%= t('activemodel.attributes.sellers.seller_application.products.contract.commercials.free_version.question') %></legend>

  <%= f.form_group :free_version do %>
    <%= f.radio_button :free_version, 'true', data: { further_details: 'input' } %>
    <%= f.radio_button :free_version, 'false', data: { further_details: 'input' } %>
  <% end %>

  <div class="additional-fields" data-further-details="fields">
    <div data-module="max-word-count" data-max-word-count="200">
      <%= f.text_area :free_version_details, rows: 5 %>
    </div>
  </div>
</fieldset>

<fieldset class="multiple-choice-group radio-group"
          data-module="further-details-fields"
          data-further-details-values="true">

  <legend><%= t('activemodel.attributes.sellers.seller_application.products.contract.commercials.free_trial.question') %></legend>

  <%= f.form_group :free_trial do %>
    <%= f.radio_button :free_trial, 'true', data: { further_details: 'input' } %>
    <%= f.radio_button :free_trial, 'false', data: { further_details: 'input' } %>
  <% end %>

  <div class="additional-fields" data-further-details="fields">
    <%= f.text_field :free_trial_url %>
  </div>
</fieldset>

<fieldset>
  <legend><%= t('activemodel.attributes.sellers.seller_application.products.contract.commercials.pricing.legend') %></legend>

  <div class="multiple-choice-group radio-group" data-module="further-details-fields" data-further-details-values="other">
    <%= f.collection_radio_buttons(:pricing_currency, Product.pricing_currency.options, :last, :first, data: { further_details: 'input' }) %>
    <div class="additional-fields" data-further-details="fields">
      <%= f.text_field :pricing_currency_other %>
    </div>
  </div>

  <%= f.text_field :pricing_unit %>
  <%= f.text_field :pricing_min %>
  <%= f.text_field :pricing_max %>
  <%= f.text_field :pricing_calculator_url %>
</fieldset>

<%= f.text_area :pricing_variables, rows: 5 %>

<fieldset class="multiple-choice-group radio-group"
          data-module="further-details-fields"
          data-further-details-values="true">

  <legend><%= t('activemodel.attributes.sellers.seller_application.products.contract.commercials.education_pricing.question') %></legend>

  <%= f.form_group :education_pricing do %>
    <%= f.radio_button :education_pricing, 'true', data: { further_details: 'input' } %>
    <%= f.radio_button :education_pricing, 'false', data: { further_details: 'input' } %>
  <% end %>

  <div class="additional-fields" data-further-details="fields">
    <%= f.text_area :education_pricing_eligibility, rows: 3 %>
    <%= f.text_area :education_pricing_differences, rows: 3 %>
  </div>
</fieldset>
