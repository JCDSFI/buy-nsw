<% content_for(:seller_application_class, 'application-dashboard product-dashboard') %>

<%= render_breadcrumbs(seller_application_product_breadcrumbs) %>

<h1>Provide details about your cloud product or service</h1>

<% if product.name.present? %>
  <h2 class="product-name"><%= product.name %></h2>
<% end %>

<div class="list-container">
  <div class="col-sm-8">
    <%= render partial: 'sellers/applications/root/task_list',
               locals: {
                 task_list: presenter.task_list,
                 resources: {
                   application: application,
                   product: product
                 }
               } %>
  </div>

  <div class="col-sm-4">
    <div class="product-actions">
       <p>You can permanently remove this product or service.</p>
       <%= link_to 'Delete this product or service', sellers_application_product_path(application, product),
                             method: :delete,
                             data: {
                               confirm: 'Are you sure?'
                             },
                             class: 'delete-action' %>
    </div>
  </div>
</div>
