<dl id="basic-details">
  <dt>Website</dt>
  <dd><%= link_to seller.website_url, seller.website_url %></dd>

  <% if seller.linkedin_url.present? %>
    <dt>LinkedIn</dt>
    <dd><%= link_to seller.linkedin_url, seller.linkedin_url %></dd>
  <% end %>

  <% if authorized_buyer %>
  <dt>Business contact</dt>
  <dd>
    <%= seller.contact_name %><br>
    <%= tel_to seller.contact_phone, "data-module" => "track-outbound-link" %><br>
    <%= mail_to seller.contact_email, seller.contact_email, "data-module" => "track-outbound-link" %>
  </dd>
  <% end %>
</dl>
