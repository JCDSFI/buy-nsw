<dl id="basic-details">
  <dt>Website</dt>
  <dd><%= link_to seller.website_url %></dd>

  <% if seller.linkedin_url.present? %>
    <dt>LinkedIn</dt>
    <dd><%= link_to seller.linkedin_url %></dd>
  <% end %>

  <% if authorized_buyer %>
  <dt>Business contact</dt>
  <dd>
    <%= seller.contact_name %><br>
    <%= tel_to seller.contact_phone %><br>
    <%= mail_to seller.contact_email %>
  </dd>
  <% end %>
</dl>
