<% if seller.products.active.any? %>
<ul id="products">
  <h2>Products</h2>
  <% seller.products.active.order(:name).each do |product| %>
  <li>
    <%= link_to product.name, pathway_product_path(product.section, product) %> &mdash;
    <%= format_text_block product.summary %>
  </li>
  <% end %>
</ul>
<% end %>
