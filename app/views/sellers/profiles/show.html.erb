<% content_for :title, seller_version.name %>

<% if current_user.nil? %>
<div class="alert alert-secondary" role="alert">
  To see the full seller profile,
  <%= link_to 'create a buyer account', registration_path(type: :buyer) %>, or
  <%= link_to 'sign in', new_user_session_path %>.
</div>
<% elsif ! current_user.is_active_buyer? %>
<div class="alert alert-secondary" role="alert">
  To see the full seller profile you need to be an approved buyer.
</div>
<% end %>

<section class="view-sellers-profiles">
  <h1><%= content_for :title %></h1>
  <div class="tags"><%= seller_profile_tags(seller_version) %></div>

  <div class="intro">
    <div class="summary">
      <%= simpler_format seller_version.summary %>
    </div>
  </div>

  <div class="profile-container">
    <div class="contents-container">
      <div class="contents">
        <h3>On this page</h3>
        <ol>
          <li><%= link_to 'Company details', '#company-details' %></li>
          <% if seller_version.awards.any? %>
            <li><%= link_to 'Recognition', '#recognition' %></li>
          <% end %>
          <% if seller_version.seller.products.active.any? %>
            <li><%= link_to 'Products', '#products' %></li>
          <% end %>
        </ol>
      </div>
    </div>
    <div class="profile">
      <%= render 'basic_details' %>
      <%= render 'company_details' %>
      <%= render 'recognition' %>
      <%= render 'products' %>
    </div>
</section>
