<% content_for(:without_container, true) %>

<% content_for :header do %>
  <header class="section-header">
    <div class="container">
      <div class="row">
        <h1>
          <span class="type-label">Sign up as a buyer<span class="visually-hidden">:</span></span>
          <%= application.buyer.user.email %>
        </h1>
      </div>
    </div>
  </header>
<% end %>

<% content_for(:content) do %>
  <div class="container">
    <section class="view-buyers-applications">
      <div class="steps-container">
        <div class="steps-list">
          <%= render partial: 'buyers/applications/step_list', locals: { operation: operation } %>
        </div>
        <div class="current-step">
          <%= content_for?(:content) ? yield(:content) : yield %>
        </div>
      </div>
    </section>
  </div>
<% end %>

<%= render template: 'layouts/application' %>
