<h1><%= t('buyers.applications.steps.review.title') %></h1>

<section class="detail-review">
  <%= t('buyers.applications.steps.review.intro_html') %>
  <dl>
    <dt><%= t('buyers.applications.steps.basic_details.name.label') %></dt>
    <dd><%= application.name %></dd>

    <dt><%= t('buyers.applications.steps.basic_details.organisation.label') %></dt>
    <dd><%= application.organisation %></dd>

    <dt><%= t('buyers.applications.steps.email_approval.long') %></dt>
    <dd><%= application.application_body %></dd>

    <dt><%= t('buyers.applications.steps.employment_status.long') %></dt>
    <dd><%= application.employment_status.text %></dd>

    <% if application.requires_manager_approval? %>
      <dt><%= t('buyers.applications.steps.manager_approval.long') %></dt>
      <dd>
        <%= application.manager_name %>&mdash;
        <%= application.manager_email %>
      </dd>
    <% end %>

  </dl>

</section>
<%= button_to 'Submit application', submit_buyers_application_path(application), method: :post %>
