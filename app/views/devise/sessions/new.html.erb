<section class="view-sessions-new">
  <h1><%= t('users.sessions.sign_up.title') %></h1>

  <ul class="accounts">
    <li class="buyer-account">
      <div class="box">
        <h2><%= t('users.sessions.sign_up.buyers.title') %></h2>
        <%= t('users.sessions.sign_up.buyers.body_html') %>
        <%= link_to t('users.sessions.sign_up.buyers.button_label'), new_user_registration_path(type: 'buyer'), class: 'action' %>
      </div>
    </li>
    <li class="seller-account">
      <div class="box">
        <h2><%= t('users.sessions.sign_up.sellers.title') %></h2>
        <%= t('users.sessions.sign_up.sellers.body_html') %>
        <%= link_to t('users.sessions.sign_up.sellers.button_label'), new_user_registration_path(type: 'seller'), class: 'action' %>
      </div>
    </li>
  </ul>

  <section class="sign-in-form">
    <header>
      <h1><%= t('users.sessions.sign_in.title') %></h1>
      <%= t('users.sessions.sign_in.help.body_html',
        forgotten_password: link_to(
          t('users.sessions.sign_in.help.forgotten_password_label'),
          new_password_path(resource_name)
        ),
        confirmation_email: link_to(
          t('users.sessions.sign_in.help.confirmation_email_label'),
          new_confirmation_path(resource_name)
        )
      ) %>
    </header>

    <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.email_field :email, autocomplete: "email",
                                autofocus: true,
                                label: t('users.sessions.sign_in.form.email_label') %>
      <%= f.password_field :password, autocomplete: "off",
                                      label: t('users.sessions.sign_in.form.password_label')%>

      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me, label: t('users.sessions.sign_in.form.remember_me_label') %>
      <% end -%>

      <fieldset class="actions">
        <%= f.submit t('users.sessions.sign_in.form.submit_label') %>
      </fieldset>
    <% end %>
  </section>
</section>
