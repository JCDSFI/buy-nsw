<% content_for :title, 'Forgot your password?' %>

<h2><%= content_for :title %></h2>

<%= reform_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.input :email, autocomplete: "email",
                      label: t('users.sessions.sign_in.form.email_label') %>

  <fieldset class="actions">
    <%= f.submit "Send me reset password instructions" %>
  </fieldset>
<% end %>
