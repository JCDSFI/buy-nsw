<table class="table table-striped">
  <thead>
    <tr>
      <th>Time</th>
      <th>Description</th>
      <th>User</th>
    </tr>
  </thead>
  <tbody>
    <% events.each do |event| %>
      <tr>
        <td><%= event.created_at.localtime.to_formatted_s(:long) %></td>
        <td><%= event.description %></td>
        <td><%= event.user.email if event.user%></td>
      </tr>
    <% end %>
  </tbody>
</table>
